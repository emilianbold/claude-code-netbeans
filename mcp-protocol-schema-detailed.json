{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON-RPC 2.0 MCP Protocol Messages with Tool-Specific Schemas",
  "type": "object",
  "required": ["jsonrpc"],
  "properties": {
    "jsonrpc": {
      "type": "string",
      "const": "2.0"
    }
  },
  "oneOf": [
    {
      "title": "Request Message",
      "required": ["method", "id"],
      "properties": {
        "method": {
          "type": "string",
          "enum": ["initialize", "tools/list", "tools/call"]
        },
        "id": {
          "type": "integer"
        },
        "params": {
          "oneOf": [
            {
              "title": "Initialize Params",
              "type": "object",
              "properties": {
                "protocolVersion": {"type": "string"},
                "capabilities": {
                  "type": "object",
                  "properties": {
                    "roots": {"type": "object"}
                  }
                },
                "clientInfo": {
                  "type": "object",
                  "properties": {
                    "name": {"type": "string"},
                    "version": {"type": "string"}
                  }
                }
              }
            },
            {
              "title": "Tools/Call Params",
              "type": "object",
              "required": ["name", "arguments"],
              "properties": {
                "name": {
                  "type": "string",
                  "enum": [
                    "checkDocumentDirty", "closeAllDiffTabs", "close_tab", 
                    "executeCode", "getCurrentSelection", "getDiagnostics",
                    "getLatestSelection", "getOpenEditors", "getWorkspaceFolders",
                    "openDiff", "openFile", "saveDocument"
                  ]
                },
                "arguments": {
                  "oneOf": [
                    {
                      "title": "closeAllDiffTabs Arguments",
                      "type": "object",
                      "additionalProperties": false
                    },
                    {
                      "title": "close_tab Arguments",
                      "type": "object",
                      "required": ["tab_name"],
                      "properties": {
                        "tab_name": {"type": "string"}
                      },
                      "additionalProperties": false
                    },
                    {
                      "title": "getDiagnostics Arguments",
                      "type": "object",
                      "properties": {
                        "uri": {"type": "string"}
                      },
                      "additionalProperties": false
                    },
                    {
                      "title": "openDiff Arguments",
                      "type": "object",
                      "required": ["old_file_path", "new_file_path", "new_file_contents"],
                      "properties": {
                        "old_file_path": {"type": "string"},
                        "new_file_path": {"type": "string"},
                        "new_file_contents": {"type": "string"},
                        "tab_name": {"type": "string"}
                      },
                      "additionalProperties": false
                    },
                    {
                      "title": "checkDocumentDirty Arguments",
                      "type": "object",
                      "required": ["filePath"],
                      "properties": {
                        "filePath": {"type": "string"}
                      },
                      "additionalProperties": false
                    },
                    {
                      "title": "executeCode Arguments",
                      "type": "object",
                      "required": ["code"],
                      "properties": {
                        "code": {"type": "string"}
                      },
                      "additionalProperties": false
                    },
                    {
                      "title": "openFile Arguments",
                      "type": "object",
                      "required": ["filePath", "startText", "endText"],
                      "properties": {
                        "filePath": {"type": "string"},
                        "startText": {"type": "string"},
                        "endText": {"type": "string"},
                        "preview": {"type": "boolean", "default": false},
                        "selectToEndOfLine": {"type": "boolean", "default": false},
                        "makeFrontmost": {"type": "boolean", "default": true}
                      },
                      "additionalProperties": false
                    },
                    {
                      "title": "saveDocument Arguments",
                      "type": "object",
                      "required": ["filePath"],
                      "properties": {
                        "filePath": {"type": "string"}
                      },
                      "additionalProperties": false
                    },
                    {
                      "title": "No Arguments Tools",
                      "type": "object",
                      "additionalProperties": false,
                      "description": "For tools: getCurrentSelection, getLatestSelection, getOpenEditors, getWorkspaceFolders"
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    },
    {
      "title": "Response Message",
      "required": ["id"],
      "not": {"required": ["method"]},
      "properties": {
        "id": {
          "type": "integer"
        }
      },
      "oneOf": [
        {
          "title": "Success Response",
          "required": ["result"],
          "properties": {
            "result": {
              "oneOf": [
                {
                  "title": "Initialize Result",
                  "type": "object",
                  "properties": {
                    "protocolVersion": {"type": "string"},
                    "capabilities": {
                      "type": "object",
                      "properties": {
                        "tools": {
                          "type": "object",
                          "properties": {
                            "listChanged": {"type": "boolean"}
                          }
                        }
                      }
                    },
                    "serverInfo": {
                      "type": "object",
                      "properties": {
                        "name": {"type": "string"},
                        "version": {"type": "string"}
                      }
                    }
                  }
                },
                {
                  "title": "Tools List Result",
                  "type": "object",
                  "properties": {
                    "tools": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {"type": "string"},
                          "description": {"type": "string"},
                          "inputSchema": {"type": "object"}
                        }
                      }
                    }
                  }
                },
                {
                  "title": "Tool Call Result",
                  "type": "object",
                  "properties": {
                    "content": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "type": {"type": "string"},
                          "text": {"type": "string"}
                        },
                        "required": ["type", "text"]
                      }
                    }
                  },
                  "required": ["content"]
                }
              ]
            }
          }
        },
        {
          "title": "Error Response",
          "required": ["error"],
          "properties": {
            "error": {
              "type": "object",
              "required": ["code", "message"],
              "properties": {
                "code": {"type": "integer"},
                "message": {"type": "string"},
                "data": {}
              }
            }
          }
        }
      ]
    },
    {
      "title": "Notification Message",
      "required": ["method"],
      "not": {"required": ["id"]},
      "properties": {
        "method": {
          "type": "string",
          "enum": ["notifications/initialized", "ide_connected", "selection_changed", "diagnostics_changed", "log_event"]
        },
        "params": {
          "oneOf": [
            {
              "title": "IDE Connected Params",
              "type": "object",
              "required": ["pid"],
              "properties": {
                "pid": {"type": "integer"}
              },
              "additionalProperties": false
            },
            {
              "title": "Selection Changed Params",
              "type": "object",
              "required": ["text", "filePath", "fileUrl", "selection"],
              "properties": {
                "text": {"type": "string"},
                "filePath": {"type": "string"},
                "fileUrl": {"type": "string"},
                "selection": {
                  "type": "object",
                  "required": ["start", "end", "isEmpty"],
                  "properties": {
                    "start": {
                      "type": "object",
                      "required": ["line", "character"],
                      "properties": {
                        "line": {"type": "integer"},
                        "character": {"type": "integer"}
                      },
                      "additionalProperties": false
                    },
                    "end": {
                      "type": "object",
                      "required": ["line", "character"],
                      "properties": {
                        "line": {"type": "integer"},
                        "character": {"type": "integer"}
                      },
                      "additionalProperties": false
                    },
                    "isEmpty": {"type": "boolean"}
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            {
              "title": "Diagnostics Changed Params",
              "type": "object",
              "required": ["uris"],
              "properties": {
                "uris": {
                  "type": "array",
                  "items": {"type": "string"}
                }
              },
              "additionalProperties": false
            },
            {
              "title": "Log Event Params",
              "type": "object",
              "required": ["eventName", "eventData"],
              "properties": {
                "eventName": {"type": "string"},
                "eventData": {"type": "object"}
              },
              "additionalProperties": false
            }
          ]
        }
      }
    }
  ],
  "definitions": {
    "diagnosticItem": {
      "type": "object",
      "required": ["uri", "diagnostics"],
      "properties": {
        "uri": {"type": "string"},
        "diagnostics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["message", "severity", "range", "source", "code"],
            "properties": {
              "message": {"type": "string"},
              "severity": {"type": "string", "enum": ["Error", "Warning", "Information", "Hint"]},
              "range": {
                "type": "object",
                "required": ["start", "end"],
                "properties": {
                  "start": {
                    "type": "object",
                    "required": ["line", "character"],
                    "properties": {
                      "line": {"type": "integer"},
                      "character": {"type": "integer"}
                    }
                  },
                  "end": {
                    "type": "object",
                    "required": ["line", "character"],
                    "properties": {
                      "line": {"type": "integer"},
                      "character": {"type": "integer"}
                    }
                  }
                }
              },
              "source": {"type": "string"},
              "code": {"type": "string"}
            }
          }
        }
      }
    }
  }
}