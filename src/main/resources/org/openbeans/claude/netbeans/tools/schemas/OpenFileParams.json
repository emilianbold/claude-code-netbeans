{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "description": "Path to the file to open"
    },
    "preview": {
      "type": "boolean",
      "description": "Whether to open in preview mode"
    }
  },
  "required": ["path", "preview"]
}